doctype html 
html 
    head 
        title Medical Store
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')

    body 
        .container 
            nav.navbar.navbar-expand-md.navbar-dark.bg-info.fixed-top 
                a.navbar-brand(href='#')  Medical Store
                button.navbar-toggler(type= 'button', data-toggle= 'collapse', data-target= '#navbar', aria-controls= 'navbar', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon 
                #navbar.collapse.navbar-collapse 
                    ul.navbar-nav.mr-auto 
                        li.nav-itemm.active 
                            a.nav-link(href= '/medicines') Home  
                        li.nav-item 
                            a.nav-link(href= '/medicines/add') Add Medicines
                        li.nav-item
                            a.nav-link(href='/user/logout') Logout
        .container 
            br
            br
            br
            br
            != messages('message', locals)
            if errors
                each error in errors
                    div(class='alert alert-danger') #{error.msg}
            block content 
        script(src='https://code.jquery.com/jquery-3.5.1.min.js')
        script(src='/bootstrap/js/bootstrap.js')
        script(src= "/js/main.js")
        script(src= "https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js")